$(document).ready(function(){
	var myLi = $("#i_airTop > ul > li");
	var myDiv =$("#i_airCont > .box");
	myLi.each(function(i){
	   $(this).mouseover(function(){
		 myLi.removeClass("hover");
		  $(this).addClass("hover");
		   myDiv.hide();
		   myDiv.eq(i).show();
	   })
	})
})

