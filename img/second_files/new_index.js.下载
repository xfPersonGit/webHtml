$(document).ready(function(){
	var myLi = $("#myTop > ul > li");
	var myDiv =$("#myCont > div");
	myLi.each(function(i){
	   $(this).mouseover(function(){
		 myLi.removeClass("hover");
		  $(this).addClass("hover");
		   myDiv.hide();
		   myDiv.eq(i).show();
	   });
	});
